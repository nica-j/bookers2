<div class ="container px-5">
  <div class = "row">
    <div class = "mx-auto col-md-8 mt-3">
      <h1>User info</h1>

      <% if @user.errors.any? %>
        <%= @user.errors.count %>error prohibited this obj from being saved:
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: @user do |f| %>
        <label>Name</label>
        <br><%= f.text_field :name, class: "form-control" %>
        <br><label>Image</label>
        <br><%= f.file_field :profile_image, accept: "image/*" %>
        <br><label>Introdution</label>
        <br><%= f.text_area :introduction, class: "form-control" %>
        <br><%= f.submit "Update User", class: "btn btn-sm btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>