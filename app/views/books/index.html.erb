<h4>User info</h4>
<div><%= current_user.image %></div>
<p>name <%= current_user.name %></p>
<p>introduction <%= current_user.introduction %></p>

<h4>New book</h4>
<%= form_with model: @book do |book| %>
  <h6>Title</h6>
  <%= book.text_field :title %>
	
  <h6>Opinion</h6>
  <%= book.text_area :opinion %>
	
  <br><%= book.submit 'create book' %>
<% end %>



<h4>Books</h4>
<table>
