<%= render 'sideb', {user: current_user, book: Book.new} %>

<h4>Books</h4>
<table>
  <thead>
    <tr>
      <th colspan="1"></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thread>
  <tbody>
    <tr>
      <% @books.each do |book| %>
        <tr>
          <td><%= image_tag book.user.profile_image(100,100) %></td> 
          <td>
            <%= link_to book_path(book.id) do %>
              <%= book.title %>
            <% end %>
          </td>
          <td><%= book.body %></td>
        </tr>
      <% end %> 
    </tr>
  </tbody>
</table>