    <tr>
      <th colspan="1"></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thread>
  <tbody>
    <tr>
      <% @books.each do |book| %>
        <tr>
          <td>user.image </td>
          <td>
            <%= link_to book_path(book.id) do %>
              <%= book.title %>
            <% end %>
          </td>
          <td><%= book.opinion %></td>
        </tr>
      <% end %> 
    </tr>
  </tbody>
</table>