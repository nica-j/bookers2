<div class='container px-5'>
    <div class='row'>
      <div class='col-md-3'>
        <%= render 'sideb', {user: @user, book: Book.new} %>
      </div>

      <div class='col-md-8 offset-md-1'>
        <h2>Book detail</h2>
        <table class='table table-hover table-inverse'>
          <tbody>
            <td>
              <%= image_tag @user.get_profile_image(100,100) %>
              <br><%= link_to @user.name, user_path(@user.id) %>
            </td>
            <td>
              <%= link_to @book.title, book_path(@book.id) %>
            </td>
            <td><%= @book.body %></td>
            <% if @book.user == current_user %>
              <td>
                <%= link_to edit_book_path(@book.id), class: "btn btn-sm btn-success" do %>
                  <span>Edit</span>
                <% end %>
              </td>
              <td>
                <%= link_to book_path(@book.id), method: :delete,
                   "data-confirm" => "本当に消しますか？", class: "btn btn-sm btn-danger" do %>
                  <span>Destroy</span>
                <% end %>
              </td>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
</div>