<h1>Editing Book</h1>

<%= form_with model: @book ,url: book_path(@book.id), method: :patch do |book| %>
  <div class = "edit-box">
    <p>Title</p>
    <%= book.text_field :title %>
  <div class = "edit-box">
    <p>Opinion</p>
    <%= book.text_area :opinion %>
  </div>
  <div><%= book.submit 'Update Book' %></div>
  <% end %> 


<%= link_to 'Show', book_path(@book.id) %> |
<%= link_to 'Back', books_path  %>
