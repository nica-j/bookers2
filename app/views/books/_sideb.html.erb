<h4>User info</h4>
<div><%= image_tag user.get_image(100,100) %></div>
<p>name <%= user.name %></p>
<p>introduction <%= user.introduction %></p>

<h4>New book</h4>
<%= form_with model: book do |f| %>
  <h6>Title</h6>
  <%= f.text_field :title %>
	
  <h6>Opinion</h6>
  <%= f.text_area :opinion %>
	
  <br><%= f.submit 'create book' %>
<% end %>